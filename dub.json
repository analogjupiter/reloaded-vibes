    "stringImportPaths": ["views", "."],
    "targetPath": "bin",

    "preGenerateCommands" : [
        "rdmd \"$PACKAGE_DIR/dubhash.d\""
    ],

    "dependencies": {
        "vibe-d:core": "~>0.8.6-alpha.1",
        "vibe-d:http": "~>0.8.6-alpha.1",
        "vibe-d:tls": "~>0.8.6-alpha.1",
        "fswatch": "~>0.4.0"
    },

    "configurations": [
        {
            "name": "application",
            "targetType": "executable",
            "subConfigurations": {
                "vibe-d:tls": "notls"
            }
        },
        {
            "name": "library",
            "targetType": "library",
            "excludedSourceFiles": ["source/reloadedvibes/app.d"]
        }
    ]
}
